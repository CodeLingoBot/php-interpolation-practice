{
  "name": "interpolation",
  "type": "project",
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.4",
    "phpspec/phpspec": "^5.1",
    "phpunit/phpunit": "^7.5"
  },
  "config": {
    "bin-dir": "bin"
  },
  "autoload": {
    "psr-4": {
      "Interpolation\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Interpolation\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "phpcs": "bin/phpcs -p --standard=PSR2 --ignore=vendor ./src",
    "phpcbf": "bin/phpcbf -p --standard=PSR2 --ignore=vendor ./src"
  }
}
